<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_outline</item>
        <item name="android:radius">40dp</item>
    </style>

    <style name="RobotoBoldText">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MerriweatherTitleText">
        <item name="fontFamily">@font/merriweather</item>
        <item name="android:fontFamily">@font/merriweather</item>
    </style>

    <style name="CurrentLocationBtn" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/current_location_btn</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screeeen</item>
        <item name="android:windowAnimationStyle">@style/SplashScreenAnimationTransition</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="SplashScreenAnimationTransition" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_up_out</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_up_out</item>
    </style>
</resources>
